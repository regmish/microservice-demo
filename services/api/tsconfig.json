{
	"compileOnSave": true,
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2020",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "build",
		"sourceMap": true,
		"moduleResolution": "node",
		"watch": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": [
			"node",
			"jest"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"build",
		"./vscode"
	]
}